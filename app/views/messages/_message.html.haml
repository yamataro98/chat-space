.main-chat__messages__messages-box{data: {message: {id: message.id}}}
  .main-chat__messages__messages-box__messages-info
    .main-chat__messages__messages-box__messages-info__messages-info-name
      = message.user.name
    .main-chat__messages__messages-box__messages-info__messages-info-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message
    - if message.content.present?
      %p.main-chat__messages__messages-box__messages-content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?

